<Window x:Class="TorboFile.Windows.MessageBoxWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TorboFile.Windows"
        xmlns:controls="clr-namespace:TorboFile.Controls"
        mc:Ignorable="d"
        ResizeMode="NoResize" WindowStartupLocation="CenterScreen"
        HorizontalContentAlignment="Stretch" Height="150" MaxWidth="400"
        Style="{StaticResource AppWindow}"
        Topmost="True" WindowStyle="None">
    <controls:MessageBox x:Name="MessageBoxView" Margin="4,4,4,4"
                         HorizontalAlignment="Stretch" HorizontalContentAlignment="Stretch" />
</Window>
