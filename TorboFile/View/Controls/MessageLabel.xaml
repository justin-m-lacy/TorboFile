<UserControl x:Class="Lemur.Windows.Controls.MessageLabel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Lemur.Windows.Controls"
             mc:Ignorable="d" d:DesignWidth="300" Height="54.745">
    <StackPanel>
        <Label x:Name="LblMessage"
               Foreground="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=ContentControl}, Path=Foreground}"
               HorizontalAlignment="Left" VerticalAlignment="Top" Width="300" Height="55" Margin="0,0,0,-55"/>
    </StackPanel>
</UserControl>