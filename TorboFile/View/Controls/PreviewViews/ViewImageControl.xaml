<local:PreviewControl x:Class="TorboFile.Controls.ViewImageControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TorboFile.Controls"
             xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
             xmlns:gif="http://wpfanimatedgif.codeplex.com"
             xmlns:lemur="clr-namespace:LerpingLemur.Windows.Images"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">



    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">

        <!--<Image Source="{Binding FilePath }" HorizontalAlignment="Stretch" VerticalAlignment="Center"/>-->
        <lemur:Picture Uri="{Binding FilePath}"
                   HorizontalAlignment="stretch" VerticalAlignment="Stretch">
        </lemur:Picture>

    </ScrollViewer>

</local:PreviewControl>
